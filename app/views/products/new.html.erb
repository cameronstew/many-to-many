
<div class="page-header">
  <h1>Create a Product </h1>
</div>

<%= form_for @product do |f| %>

     <p>
      <%= f.label :name %>
      <%= f.text_field :name %>
     </p>

     <p>
        <%= f.label :price %>
        <%= f.number_field :price %>
     </p>

      <p>
        <%= f.collection_select :company_id, Company.order(:name), :id, :name, {}, {class: "form-control"} %>
     </p>

<%= f.submit %>

<% end %>
